<?xml version="1.0" encoding="utf-8"?>
<extension name="Typing Scripts" classname="TypingScripts.hx">
	<cmds>
		<cmd name="font">
			<arg name="font" type="Font" />
		</cmd>
		<cmd name="color">
			<arg name="color" type="Color" />
		</cmd>
		<cmd name="typespeed">
			<arg name="speed" type="Float" />
		</cmd>
		<cmd name="typesound">
			<arg name="sound" type="Sound" />
		</cmd>
		<cmd name="soundskip">
			<arg name="numToSkip" type="Dynamic" />
		</cmd>
	</cmds>
	<prefs>
		<pref name="defaultRandomTypeSounds" type="Array" label="Default Random Type Sounds" />
		<pref name="characterSkipSFX" type="Int" label="Number of characters to skip for playing Type Sound." />
		<pref name="playTypeSoundOnSpaces" type="Boolean" label="Play Type Sound On Spaces" />
	</prefs>
</extension>