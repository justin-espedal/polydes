<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<structure classname="dialog.ds.ext.TypingScripts" extends="dialog.ds.DialogExtension">
    <dg:extension implementation="dialog.ext.TypingScripts" xmlns:dg="com.polydes.dialog">
        <dg:cmds>
        	<dg:cmd name="font">
        		<dg:arg name="font" type="String" />
        	</dg:cmd>
        	<dg:cmd name="color">
        		<dg:arg name="color" type="Int" />
        	</dg:cmd>
        	<dg:cmd name="typespeed">
        		<dg:arg name="speed" type="Float" />
        	</dg:cmd>
        	<dg:cmd name="typesound">
        		<dg:arg name="sound" type="String" />
        	</dg:cmd>
        	<dg:cmd name="soundskip">
        		<dg:arg name="numToSkip" type="Int" />
        	</dg:cmd>
        </dg:cmds>
    </dg:extension>
    <text label="Plugin Info" text="Commands to change how text is typed in dialog." />
    <field editor="Simple" genType="com.stencyl.models.Sound" hint="A list of sounds to randomly pick from for each Type Sound." label="Default Random Type Sounds" name="defaultRandomTypeSounds" type="Array"/>
    <field default="0" editor="Plain" hint="Number of characters to skip for playing Type Sound." label="Type Sound Character Skip" name="characterSkipSFX" step="1" type="Int"/>
    <field default="false" label="Play Type Sound On Spaces" name="playTypeSoundOnSpaces" type="Bool"/>
</structure>