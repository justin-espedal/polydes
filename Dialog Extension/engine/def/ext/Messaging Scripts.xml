<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<structure classname="dialog.ds.ext.MessagingScripts" extends="dialog.ds.DialogExtension">
    <dg:extension implementation="dialog.ext.MessagingScripts" xmlns:dg="com.polydes.dialog">
        <dg:cmds>
        	<dg:cmd name="setattr">
        		<dg:arg name="args" type="Array" />
        	</dg:cmd>
        	<dg:cmd name="getattr" returns="Dynamic">
        		<dg:arg name="args" type="Array" />
        	</dg:cmd>
        	<dg:cmd name="showattr">
        		<dg:arg name="args" type="Array" />
        	</dg:cmd>
        	<dg:cmd name="messagescene">
        		<dg:arg name="behaviorName" type="String" />
        		<dg:arg name="message" type="String" />
        		<dg:arg name="args" type="Array" />
        	</dg:cmd>
        	<dg:cmd name="messageactor">
        		<dg:arg name="actorName" type="String" />
        		<dg:arg name="behaviorName" type="String" />
        		<dg:arg name="message" type="String" />
        		<dg:arg name="args" type="Array" />
        	</dg:cmd>
        </dg:cmds>
    </dg:extension>
    <text label="Plugin Info" text="Send messages or get/set values with actors, scenes, and arbitrary Haxe objects. No options to configure." />
</structure>