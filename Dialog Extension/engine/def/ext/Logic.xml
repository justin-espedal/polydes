<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<structure classname="dialog.ds.ext.Logic" extends="dialog.ds.DialogExtension">
    <dg:extension implementation="dialog.ext.Logic" xmlns:dg="com.polydes.dialog">
        <dg:cmds>
        	<dg:cmd name="if">
        		<dg:arg name="condition" type="Bool" />
        	</dg:cmd>
        	<dg:cmd name="elseif">
        		<dg:arg name="condition" type="Bool" />
        	</dg:cmd>
        	<dg:cmd name="else" />
        	<dg:cmd name="endif" />
        </dg:cmds>
    </dg:extension>
    <text label="Plugin Info" text="Use logic to control what dialog is shown. No options to configure." />
</structure>
