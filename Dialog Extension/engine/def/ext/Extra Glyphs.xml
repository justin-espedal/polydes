<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<structure classname="dialog.ds.ext.ExtraGlyphs" extends="dialog.ds.DialogExtension">
    <dg:extension implementation="dialog.ext.ExtraGlyphs" desc="Show images inline with dialog." xmlns:dg="com.polydes.dialog">
        <dg:cmds>
        	<dg:cmd name="glyph" desc="Show glyph [image] in the dialog.">
        		<dg:arg name="image" type="String" />
        	</dg:cmd>
        </dg:cmds>
    </dg:extension>
    <field default="0" editor="Plain" hint="extra pixels counted for the width of a glyph." label="Padding" name="glyphPadding" step="1" type="Int"/>
</structure>
